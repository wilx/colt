
DOC=$(HOME)/coltb4/mif/mifdoclet_C
run ::
javadoc \
         -doclet com.sun.tools.doclets.mif.MIFDoclet \
         -docletpath $(DOC)/mif.jar:\
                     $(DOC)/mifoutput.jar:\
                     $(DOC)/standarddoclet.jar \  
         -sourcepath $(HOME)/coltdev/MySources \
         -includedir $(DOC) \
         -overview $(HOME)/coltdev/MySources/cern/colt/doc-files/Overview.html \
         -doctitle "Java Packages" \
         -group "Core Packages" "cern.colt.matrix.*" \ 
         -membersummary compact \
         -bookfile cern.colt.book \
         -titlefile $(DOC)/titlepage.mif \
         -contentsfile $(DOC)/contents.mif \
         -indexfile $(DOC)/index.mif \
         -d docs \
         cern.colt.matrixt